<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/enterBtn"
        android:layout_width="94dp"
        android:layout_height="43dp"
        android:text="Enter"
        tools:layout_editor_absoluteX="208dp"
        tools:layout_editor_absoluteY="165dp" />

    <Button
        android:id="@+id/addArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Favorite Artist"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="240dp" />

    <EditText
        android:id="@+id/artistText"
        android:layout_width="138dp"
        android:layout_height="39dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="32dp"
        android:ems="10"
        android:hint="Search Artist"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/addArtist"
        app:layout_constraintEnd_toStartOf="@+id/enterBtn" />

    <Button
        android:id="@+id/volleyBtn"
        android:layout_width="97dp"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="40dp"
        android:text="Volley"
        app:layout_constraintBottom_toTopOf="@+id/artistRecyclerView"
        app:layout_constraintStart_toEndOf="@+id/addArtist" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/artistRecyclerView"
        android:layout_width="403dp"
        android:layout_height="407dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>