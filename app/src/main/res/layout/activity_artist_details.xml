<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ArtistDetails">

    <TextView
        android:id="@+id/albumName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Album Name Goes here"
        app:layout_constraintBottom_toTopOf="@+id/albumName2"
        tools:layout_editor_absoluteX="128dp" />

    <TextView
        android:id="@+id/albumName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Album Name Goes here"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="409dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="83dp"
        android:layout_height="19dp"
        android:layout_marginBottom="28dp"
        android:text="Song Name"
        app:layout_constraintBottom_toTopOf="@+id/albumName"
        tools:layout_editor_absoluteX="164dp" />

    <ImageView
        android:id="@+id/artistPic2"
        android:layout_width="119dp"
        android:layout_height="104dp"
        android:layout_marginEnd="92dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.73"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>